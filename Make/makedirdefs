
################################################################
# Directories traversed from the top level
TOP_LEVEL_DIRS = \
    src\
    applications

ifeq ($(COMPILE_EXAMPLES),yes)
TOP_LEVEL_DIRS += examples
endif


################################################################
# Directories traversed in the TOPDIR/src directory
SRC_DIRS = \
	osg\
	osgUtil\
	osgDB\
	osgGA\
	osgParticle\
	osgText\
        osgFX\
	osgSim\
	osgProducer

ifeq ($(GDAL_INSTALLED),yes)
SRC_DIRS += osgTerrain
endif

ifeq ($(COMPILE_INTROSPECTION),yes)
SRC_DIRS += \
        osgIntrospection\
	osgWrappers
endif

SRC_DIRS += \
	osgPlugins\
        

WRAPPER_DIRS = \
