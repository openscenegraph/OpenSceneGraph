#ifndef OSG_ENDIAN
#define OSG_ENDIAN 1

#include <algorithm>

namespace osg {

enum Endian
{
    BigEndian,
    LittleEndian
};

inline Endian getCpuByteOrder()
{
    static char big_endian_1[2] = { 0, 1 };

    if ( (*((short*) big_endian_1)) == 1)
        return BigEndian;
    else 
        return LittleEndian;
} 

inline void swapBytes( char* in, unsigned int size )
{
    char* start = in;
    char* end = start+size-1;
    while (start<end)
    {
        std::swap(*start++,*end--);
    }
    
}

inline void swapBytes2( char* in )
{
    char* start = in;
    char* end = start+1;
    std::swap(*start,*end);
}

inline void swapBytes4( char* in )
{
    char* start = in;
    char* end = start+3;
    std::swap(*start++,*end--);
    std::swap(*start,*end);
}

inline void swapBytes8( char* in )
{
    char* start = in;
    char* end = start+7;
    std::swap(*start++,*end--);
    std::swap(*start++,*end--);
    std::swap(*start++,*end--);
    std::swap(*start,*end);
}

inline void swapBytes16( char* in )
{
    char* start = in;
    char* end = start+15;
    std::swap(*start++,*end--);
    std::swap(*start++,*end--);
    std::swap(*start++,*end--);
    std::swap(*start++,*end--);
    std::swap(*start++,*end--);
    std::swap(*start++,*end--);
    std::swap(*start++,*end--);
    std::swap(*start,*end);
}

}

#endif
