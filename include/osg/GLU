#ifndef OSG_GLU
#define OSG_GLU 1

#if defined(__APPLE__) || defined (_AIX)
    #include <OpenGL/glu.h>
    #define GLU_TESS_CALLBACK GLvoid (CALLBACK*)(...)
#else
    #include <GL/glu.h>
    #define GLU_TESS_CALLBACK GLvoid (CALLBACK*)()
#endif

#endif  // __osgGLU_h
